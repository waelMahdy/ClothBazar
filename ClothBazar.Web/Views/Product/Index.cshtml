@model ClothBazar.Entity.Product
@{
    ViewBag.Title = "Index";
}
    <div class="form-group pull-right">
        <div class="row">
            <div class="col-md-4 pr-0">
                <a class="themesflat-button bg-accent m-5" href="/Category/Index">Categories</a>
            </div>
            <div class="col-md-4 pr-0">
                <a class="themesflat-button bg-accent m-5" href="/Order/Index">Orders</a>
            </div>
        </div>
    </div>

    <section class="flat-row flat-iconbox">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-section">
                        <h2 class="title">Products</h2>
                    </div>
                </div>
            </div>
          
            <div id="tableContainer">

                @{
                    Html.RenderAction("ProductTable");

                }
            </div>
            <div id="actionContainer"></div>
        </div>
    </section>
    <script>
        function focusAction(controlToFocus) {
            $('html, body').animate({
                scrollTop: $("#" + controlToFocus).offset().top - 100
            }, 1000);
        }
    </script>
